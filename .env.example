# ================================
# Application
# ================================
NODE_ENV=production
PORT=4000

# ================================
# Database (Docker)
# ================================
MONGODB_URI=mongodb://admin:admin123@mongodb:27017/srm?authSource=admin

# ================================
# JWT
# ================================
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=7d

# ================================
# Redis Configuration (Docker)
# ================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_TTL=3600
REDIS_MAX_ITEMS=100

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=srm-lesson
R2_PUBLIC_URL=https://your-bucket.r2.dev
# Or use custom domain: https://files.yourdomain.com

# ============ Payment (SePay) ============
PAYMENT_SERVICE_SEPAY_KEY=Secret_key
PAYMENT_BASE_URL=https://my.sepay.vn
PAYMENT_QR_BANK_ACCOUNT=ACCOUNT_NUMBER
PAYMENT_QR_BANK_CODE=MB
PAYMENT_WEBHOOK_SECRET_KEY=SECRET_ID
PAYMENT_FEE=700

# ============ Email Configuration ============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ============ Telegram Notification ============
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather
TELEGRAM_CHAT_ID=-100xxxxxxxxxx
TELEGRAM_ENABLED=true
